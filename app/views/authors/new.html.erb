<h1>New Author</h1>

<%= form_for :author, url: authors_path do |f| %>
	<p>
		<%= f.label :firstName, 'First name'%><br>
		<%= f.text_field :firstName %>
	</p>
	<p>
		<%= f.label :lastName, 'Last name' %><br>
		<%= f.text_field :lastName %>
	</p>
	<p>
		<%= f.label :homepage, 'Homepage' %><br>
		<%= f.text_field :homepage %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>